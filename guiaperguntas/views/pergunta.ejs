<%- include('./partials/header.ejs') %>
<body>
    <%- include('./partials/navbar.ejs') %>

    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao%></p>
        <hr>
        
        <!--formulário para responder a pergunta-->
        <form method="POST" action="/responder">
            <h3>Responda</h3>
            <label>Resposta:</label>
            <textarea placeholder="Digite sua resposta" name="corpo" class="form-control"></textarea>
            <br>
            <!--Criando um campo para capturar o ID da pergunta-->
            <!--hidden é um tipo que deixa o campo escondido-->
            <input type="hidden" name="pergunta" value="<%= pergunta.id%>">
            
            <button type="submit" class="btn btn-primary">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta => {%> <!--Abrindo forEach-->
            <br>
            <div class="card">
                <div class="card-body">
                    <p><%= resposta.corpo%></p>
                </div>
            </div>
            
        <%})%><!--fechando forEach-->

    </div> 

</body>
<%- include('./partials/footer.ejs')%>


