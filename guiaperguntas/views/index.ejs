<%- include('./partials/header.ejs') %>
<body>

    <%- include('./partials/navbar.ejs') %>

    <div class="container">
        <hr><h4>Perguntas</h4>
        <!--estrutura do ForEach-->
        <% perguntas.forEach(pergunta => {%>
          <div class="card">  
            <div class="card-body">
                <h5><%= pergunta.titulo %></h5>
            </div>
            <div class="card-footer">
                <a href="/pergunta/<%= pergunta.id%>"</a><button class="btn btn-primary">Responder</button>
            </div>
            
           </div> 
           <br>

        <% })%>
    </div>

    <!--direciona p/ fazer uma nova pergunta-->
    <div class="container">
       <hr><h4>Fazer nova pergunta</h4>
    <div class="card">
        <div class="card-footer">
            <form action="/perguntar">
                <button class="btn btn-primary">Perguntar</button>
            </form>
        </div>
    </div>
    </div>

    

</body>
<%- include('./partials/footer.ejs')%>


